{
  "dependencies": {
    "esbuild": "^0.9.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "run-s clean build:esbuild build:minify build:shebang build:chmod",
    "build:esbuild": "esbuild src/app.ts --bundle --target=node12 --platform=node --outfile=dist/out.js",
    "build:minify": "minify dist/out.js > dist/out",
    "build:shebang": "sed -i '1i #!/usr/bin/env node\n' dist/out",
    "build:chmod": "chmod +x dist/out",
    "start": "run-s build start:app",
    "start:app": "./dist/out"
  },
  "devDependencies": {
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5"
  }
}
